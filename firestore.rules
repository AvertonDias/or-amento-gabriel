
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A coleção 'empresa' contém um documento por usuário, com o ID do usuário.
    match /empresa/{userId} {
      // O usuário pode ler e escrever no seu próprio documento de empresa.
      allow read, write: if request.auth.uid == userId;

      // Regras para as subcoleções aninhadas
      match /clientes/{clienteId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /materiais/{materialId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /orcamentos/{orcamentoId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
