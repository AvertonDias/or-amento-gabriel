rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção 'empresa'
    match /empresa/{userId} {
      // O usuário pode ler e escrever em seu próprio documento de empresa.
      allow read, write: if request.auth.uid == userId;
    }

    // Regra para as subcoleções aninhadas.
    // Esta regra de grupo de coleção é necessária para permitir consultas
    // em todas as subcoleções de uma vez (ex: buscar todos os orçamentos de um usuário).
    match /{path=**}/clientes/{clienteId} {
      allow read, write: if request.auth != null && get(path.split('/')[0,2]).data.userId == request.auth.uid;
    }
    match /{path=**}/materiais/{materialId} {
      allow read, write: if request.auth != null && get(path.split('/')[0,2]).data.userId == request.auth.uid;
    }
    match /{path=**}/orcamentos/{orcamentoId} {
      allow read, write: if request.auth != null && get(path.split('/')[0,2]).data.userId == request.auth.uid;
    }
  }
}
