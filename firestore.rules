
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra geral: permite que um usuário autenticado leia e escreva em qualquer documento
    // de qualquer coleção, desde que o documento tenha um campo 'userId'
    // que corresponda ao ID do usuário autenticado.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
