rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção 'empresa'
    match /empresa/{userId} {
      // O usuário pode ler e escrever em seu próprio documento de empresa.
      allow read, write: if request.auth.uid == userId;
    }

    // As regras de grupo de coleção permitem consultas em todas as subcoleções de uma vez.
    // Garante que um usuário só possa acessar documentos em subcoleções
    // que pertencem ao seu próprio documento de 'empresa'.
    match /{path=**}/clientes/{clienteId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/empresa/$(request.auth.uid)).data.userId == request.auth.uid;
    }
    match /{path=**}/materiais/{materialId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/empresa/$(request.auth.uid)).data.userId == request.auth.uid;
    }
    match /{path=**}/orcamentos/{orcamentoId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/empresa/$(request.auth.uid)).data.userId == request.auth.uid;
    }
  }
}
