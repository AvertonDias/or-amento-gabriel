rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que um usuário leia/escreva em um documento se o UID dele corresponder ao campo 'userId' no documento.
    // Isso se aplica a 'materiais', 'clientes', e 'orcamentos'.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // A coleção 'empresa' é um caso especial onde o ID do documento é o UID do usuário.
    match /empresa/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
