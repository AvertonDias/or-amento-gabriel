rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /*
     * Coleção EMPRESA
     * ID do documento = UID do usuário
     */
    match /empresa/{userId} {
      allow read, create, update, delete: if
        request.auth != null &&
        request.auth.uid == userId;
    }

    /*
     * Demais coleções (clientes, materiais, orcamentos, etc.)
     * Documentos possuem o campo userId
     */
    match /{collection}/{docId} {

      // Criar documento
      allow create: if
        request.auth != null &&
        request.resource.data.userId == request.auth.uid;

      // Ler e atualizar documento existente
      allow read, update: if
        request.auth != null &&
        resource.data.userId == request.auth.uid;

      // Excluir documento
      allow delete: if
        request.auth != null &&
        resource.data.userId == request.auth.uid;
    }
  }
}
