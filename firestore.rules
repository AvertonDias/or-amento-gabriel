rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que o usuário acesse (leia, escreva, apague) documentos em qualquer coleção
    // desde que o documento tenha um campo 'userId' que corresponda ao ID do usuário autenticado.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Regra específica para a coleção 'empresa', onde o ID do documento é o próprio userId.
    match /empresa/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
