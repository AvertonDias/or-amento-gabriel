
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção 'empresa', onde o ID do documento é o ID do usuário
    match /empresa/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Regra genérica para as outras coleções
    match /{collection}/{docId} {
      allow read, create, update: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      // Permite a exclusão se o usuário for o dono do documento que está sendo excluído
      allow delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }
  }
}
