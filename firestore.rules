rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // As regras 'get' e 'list' são para leitura, 'write' cobre create, update, delete.
    // 'list' é necessário para queries em coleções.
    
    match /clientes/{clientId} {
      allow get, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list, create: if request.auth != null && request.auth.uid == request.query.userId;
    }

    match /materiais/{materialId} {
      allow get, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list, create: if request.auth != null && request.auth.uid == request.query.userId;
    }

    match /orcamentos/{orcamentoId} {
      allow get, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list, create: if request.auth != null && request.auth.uid == request.query.userId;
    }

    match /empresa/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
