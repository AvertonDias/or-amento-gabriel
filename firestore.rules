rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Empresa: Usuário só pode acessar o documento com seu próprio ID
    match /empresa/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Clientes, Materiais, Orçamentos: Usuário só pode acessar documentos que pertencem a ele
    match /clientes/{docId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId);
    }
    
    match /materiais/{docId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId);
    }

    match /orcamentos/{docId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId);
    }
  }
}