rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para coleção 'materiais'
    // Permite que um usuário autenticado leia e escreva (crie, atualize, delete)
    // documentos se o 'userId' no documento for igual ao UID do usuário.
    match /materiais/{materialId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Regra para coleção 'clientes'
    // Permite que um usuário autenticado leia e escreva
    // se o 'userId' no documento for igual ao UID do usuário.
    match /clientes/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Regra para coleção 'orcamentos'
    // Permite que um usuário autenticado leia e escreva
    // se o 'userId' no documento for igual ao UID do usuário.
    match /orcamentos/{orcamentoId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Regra para coleção 'empresa'
    // Permite que um usuário leia ou escreva em um documento da coleção 'empresa'
    // se o ID do documento for igual ao UID do usuário autenticado.
    match /empresa/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
